<?xml version="1.0"?>
<robot name="realsense2_camera" xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:include filename="$(find chappie)/urdf/chappie.urdf.xacro" />
    <xacro:include filename="$(find chappie)/urdf/materials.xacro" />
    <xacro:include filename="$(find chappie)/urdf/chappie.gazebo" />
    <xacro:include filename="$(find chappie)/urdf/macros.xacro" />

    <link name="base_link">

        <!-- pose and inertial -->
        <pose>0 0 0.1 0 0 0</pose>
        <!-- body -->
        <collision name="collision_chassis">
        <geometry>
            <box size="0.5 0.3 0.07"/>
        </geometry>
        </collision>
        <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
            <box size="0.5 0.3 0.07"/>
        </geometry>
        <material name="blue"/>
        </visual>
        <!-- caster front -->
        <collision name="caster_front_collision">
        <origin rpy=" 0 0 0" xyz="-0.15 0 -0.05"/>
        <geometry>
            <sphere radius="0.05"/>
        </geometry>
        <surface>
            <friction>
            <ode>
                <mu>0</mu>
                <mu2>0</mu2>
                <slip1>1.0</slip1>
                <slip2>1.0</slip2>
            </ode>
            </friction>
        </surface>
        </collision>
        <visual name="caster_front_visual">
        <origin rpy=" 0 0 0" xyz="-0.15 0 -0.05"/>
        <geometry>
            <sphere radius="0.05"/>
        </geometry>
        </visual>
    </link>
    <link name="sensor_laser">
        <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="1" />
        <xacro:cylinder_inertia mass="1" r="0.05" l="0.1" />
        </inertial>
        
        <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <cylinder radius="0.05" length="0.1"/>
        </geometry>
        <material name="white" />
        </visual>
        
        <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <cylinder radius="0.05" length="0.1"/>
        </geometry>
        </collision>
    </link>
    
    <link name="circuitry_back">
        <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="1" />
        <xacro:box_inertia m="1" x="0.15" y="0" z="0.05"/>
        </inertial>
        
        <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <box size="0.15 0.2 0.03"/>
        </geometry>
        <material name="white" />
        </visual>
        
        <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <box size="0.15 0.2 0.03"/>
        </geometry>
        </collision>
    </link>
    <joint name="joint_sensor_laser" type="fixed">
        <origin xyz="0.15 0 0.05" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="sensor_laser"/>
    </joint>
    <joint name="joint_circuitry_back" type="fixed">
        <origin xyz="-0.15 0 0.05" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="circuitry_back"/>
    </joint>

    <xacro:link_wheel name="link_right_wheel" />
    <xacro:joint_wheel name="joint_right_wheel" child="link_right_wheel" parent="base_link" origin_xyz="0.05 0.175 0" />
    
    <xacro:link_wheel name="link_left_wheel" />
    <xacro:joint_wheel name="joint_left_wheel" child="link_left_wheel" parent="base_link" origin_xyz="0.05 -0.175 0" />

    <xacro:sensor_d435 name="camera" topics_ns="camera" parent="base_link" publish_pointcloud="true">
    <origin xyz="0.15 0 0.1" rpy="0 0 0" />
    </xacro:sensor_d435>  

</robot>